<Window x:Class="P_ZPP_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:P_ZPP_1"
        mc:Ignorable="d"
        Height="600" Width="1080"
        FontFamily="The Medic Demo"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="170"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.RowSpan="2">
            <TextBlock Text="Allegro" HorizontalAlignment="Center" Margin="10" FontSize="30"/>
        </Grid>

        <TextBox Name="PoleSzukaj"  Grid.Column="1" HorizontalAlignment="Left" Height="30" FontSize="22" Margin="10,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="434"/>
        <Button Content="Szukaj" Grid.Column="1" HorizontalAlignment="Left" Margin="464,10,0,0" VerticalAlignment="Top" Width="98" Height="30" Click="Button_Click_1"/>
        <!-- Products List -->
        <ScrollViewer VerticalScrollBarVisibility="Visible" 
            Grid.Column="1" Grid.Row="1" 
              Background="LightSteelBlue">
            <StackPanel>
                <ItemsControl x:Name="ProductList" ItemsSource="{Binding Items}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="20 10 " Background="AliceBlue">
                                <Border Margin="10" Width="830" Height="200" >
                                    <WrapPanel>
                                        <Grid Width="220" Height="200">
                                            <Border Height="150" Width="180" Margin="15,25,15,15">
                                                <Border.Background>
                                                    <ImageBrush ImageSource="{Binding Image}"/>
                                                </Border.Background>

                                            </Border>
                                        </Grid>
                                        <Grid Height="200" Width="600">
                                            <TextBlock Text="{Binding ProductName}" Margin="10,0,10,166" />
                                            <TextBlock Text="{Binding Price }" Margin="10,81,446,91"/>
                                            <Grid Margin="10,23,10,124">

                                            </Grid>
                                            <Grid x:Name="AllegroSmart">
                                                <Border Margin="171,77,301,101">
                                                    <Border.Background>
                                                        <ImageBrush ImageSource="Photos/smart.png"/>
                                                    </Border.Background>
                                                </Border>
                                                <TextBlock Text="z dostawą" Margin="299,88,110,89"/>
                                            </Grid>

                                            <TextBlock Text="{Binding PriceWithShipping}" Margin="10,172,10,0"/>





                                        </Grid>

                                    </WrapPanel>


                                </Border>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </StackPanel>

        </ScrollViewer>
        <Button Content="Historia wyszukiwania" Grid.Column="1" HorizontalAlignment="Left" Margin="567,10,0,0" VerticalAlignment="Top" Width="140" Click="Button_Click" Height="30"/>
    </Grid>
</Window>
