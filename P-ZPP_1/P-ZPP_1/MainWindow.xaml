<Window x:Class="P_ZPP_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:P_ZPP_1"
        mc:Ignorable="d"
        Height="600" Width="1080"
        FontFamily="The Medic Demo"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="170"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.RowSpan="2">
            <TextBlock Text="Allegro" HorizontalAlignment="Center" Margin="10" FontSize="30"/>
        </Grid>

        <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="30" FontSize="22" Margin="10,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="434"/>
        <Button Content="Szukaj" Grid.Column="1" HorizontalAlignment="Left" Margin="464,10,0,0" VerticalAlignment="Top" Width="98" Height="30"/>


        <Button Content="stworz baze danych jesni nie stnieje" HorizontalAlignment="Left" VerticalAlignment="Top" Width="338" Margin="28,13,0,0" Height="27" Grid.Column="1" Click="Button_Click" />
        <!-- Products List -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" CanContentScroll="True"
            Grid.Column="1" Grid.Row="1" 
            HorizontalAlignment="Right"  Margin="0,10,0,0"  
            VerticalAlignment="Top" Width="890" Height="500" Background="LightSteelBlue">
            <StackPanel>
                <StackPanel Margin="20 10 " Background="AliceBlue">
                    <Border Margin="10" Width="830" Height="200" >
                        <WrapPanel>
                            <Grid Width="220" Height="200">
                                <Border Height="150" Width="180" Margin="15,25,15,15">
                                    <Border.Background>
                                        <ImageBrush ImageSource="Photos/1.jpg"/>
                                    </Border.Background>

                                </Border>
                            </Grid>
                            <Grid Height="200" Width="600">
                                <TextBlock Text="PRODUCTNAME" Margin="10,0,10,166" />
                                <TextBlock Text="CENA" Margin="10,34,10,140"/>
                                <Border Margin="104,34,368,145">
                                    <Border.Background>
                                        <ImageBrush ImageSource="Photos/smart.png"/>
                                    </Border.Background>
                                    

                                </Border>
                                <TextBlock Text="z dostawą" Margin="237,39,-23,138"/>
                                <TextBlock Text="Cena z dostawą" Margin="10,172,10,0"/>
                                
                                



                            </Grid>
                            
                        </WrapPanel>


                    </Border>
                </StackPanel>
            </StackPanel>

        </ScrollViewer>
    </Grid>
</Window>
